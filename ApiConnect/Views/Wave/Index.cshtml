                                        <hr />
                                        <input name="SavFile" id="SavFile" type="checkbox" value="true" data-val-required="The field is required." data-val="true" class="form-control " checked="true"><label for="SavFile">Save to JSON file</label>


                                    </div>

                                </div>
                            </div>
