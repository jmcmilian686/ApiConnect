                                                <th> Value</th>
                                                <th style="width: 149px;"> Action</th>

                                            </tr>
                                        </thead>
                                        <tbody id="TableBodyWave">
                                            @foreach (var item in ViewBag.ItemsW)
                                            {
                                                <tr>

