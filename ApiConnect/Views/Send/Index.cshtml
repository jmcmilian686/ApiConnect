@model ApiConnect.Models.SendModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="tabDetail">


    <!--Table Left-->


    <div class="col-md-12 col-xs-12">
        <div class="card">
            <div class="header">
                <div class="col-xs-5 pull-left">
                    <h2>
                        Send Orders
                    </h2>
                </div>
                @*<div class="col-md-1 pull-right" id="btn_plus">
                        <button type="button" class="btn_plus btn btn-success waves-effect pull-right" onclick="location.href='@Url.Action("Create", "Datafield")'">
                            <i class="material-icons">add</i>
                        </button>
                    </div>*@

            </div>
            <div class="body">
                <div class="row controls">
                    <div class="col-md-7">
                        <div class="form-group col-xs-6">
                            <div class="form-line">
                                @Html.Label("Quantity:")
                                @Html.Editor("OrdQty", new { htmlAttributes = new { @class = "form-control", @value = Model.OrdQty, @placeholder = "Orders Quantity", @id = "OrdQty", @disabled = "true", @type = "number" } })
                            </div>

                        </div>
                        <div class="form-group col-xs-6">
                            <div class="form-line">
                                @Html.Label("Timer:")
                                @Html.Editor("Timer", new { htmlAttributes = new { @class = "form-control", @value = Model.Timer, @placeholder = "Timer", @id = "Timer", @type = "number" } })
                            </div>

                        </div>
                    </div>
                    <div class="col-md-5 pull-right">
                        <div class="form-group">
                            <input type="file" id="file2" style="display:none">
                            <button type="button" id="uplorders" class="btn bg-blue-grey waves-effect waves-light btn_save2">
                                <i class="material-icons">publish</i>
                            </button>
                            <span id="selectedF" class="spanfile">No file selected</span>
                            <button type="button" class="btn bg-cyan waves-effect btn_save2 pull-right hidden " id="dataUpl2">
                                <i class="material-icons">file_upload</i>
                            </button>
                        </div>
                        <hr />
                        <div class="submitBtn" style="margin-top: 50px;">
                            @if (Model.Messages.Count > 0)
                            {
                                <button type="button" class="btn btn-primary waves-effect  pull-right " id="processData">
                                    <i class="material-icons">alarm</i>
                                    <span> Send Timed</span>
                                </button>
                                if (Model.MessageType == "Batch")
                                {
                                    <button type="button" class="btn bg-purple waves-effect  pull-left " id="batchData">
                                        <i class="material-icons">widgets</i>
                                        <span> Batch</span>
                                    </button>
                                   

                                }

                            }

                        </div>

                    </div>


                </div>
                <hr />
                <div class="table-responsive">
                    @*<table class="table table-bordered table-striped table-hover js-basic-example dataTable">
                        <thead>
                            @*<th>Order Id</th>
                            <th>Facility</th>*@
                    <th>Message</th>
                    </thead>
                    <tbody id="tableBody">

                        @Html.Partial("_Messages", Model.Messages)
                    </tbody>
                    </table>

                </div>
            </div>
        </div>

    </div>

</div>

<!--Normal Size-->

<div class="modal fade" id="modalResult" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalLabel">Message</h4>
            </div>
            <div class="modal-body" id="updAreaResult">
                
            </div>
            
        </div>
    </div>
</div>


<div class="modal fade" id="modalBatch" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="modalLabel2">Picking Data</h4>
            </div>
            <div class="modal-body" id="updAreaResult2">
                <div class="row">
                    <div class="col-xs-12">

                        @*<div class="form-group col-xs-6">
                           
                            <button type="button" class="btn bg-green waves-effect  pull-left " id="loadBatch" style="margin-left:15px;">
                                <i class="material-icons">view_stream</i>
                                <span> Load Batch</span>
                            </button>
                            <input type="file" id="file3" style="display:none">

                        </div>*@
                        <div class="form-group col-xs-6">
                            <div class="form-line">
                                @Html.Label("Containers x Batch:")
                                @Html.Editor("contBatch", new { htmlAttributes = new { @class = "form-control", @value = Model.Timer, @placeholder = "Containers per Batch", @id = "contBatch", @type = "number" } })
                            </div>

                        </div>
                        <div class="col-md-3 pull-right">
                            <div class="form-group">
                                 <button type="button" class="btn bg-cyan waves-effect btn_save2 pull-right" id="batchCrea">
                                     <i class="material-icons">widgets</i>
                                     <span>Create Batch</span>
                                </button>
                            </div>

                        </div>

                    </div>

                </div>
            </div>

        </div>
    </div>
</div>

<!--End Modal Area-->

