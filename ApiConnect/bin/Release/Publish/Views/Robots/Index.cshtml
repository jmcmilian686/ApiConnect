@model IEnumerable<ApiConnect.Domain.Entities.Robot>
@{
   
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" id="tabDetail">

    @{
        Html.RenderAction("Details");
    }
</div>
<!--Modal Area-->
<!-- Large Size -->
<div class="modal fade" id="largeModalR" tabindex="-1" role="dialog">



    @{

        Html.RenderAction("Create");

    }



</div>

<!--Normal Size-->

<div class="modal fade" id="defaultModalR" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="defaultModalLabel">Message</h4>
            </div>
            <div class="modal-body" id="updAreaR">
                Do you want to delete the selected Item?
            </div>
            <div class="modal-footer">
                <button type="button" id="delFinalR" class="btn bg-red btn-link waves-effect" data-color="red">DELETE</button>
                <button type="button" id="clModalR" class="btn btn-link waves-effect" data-dismiss="modal">CLOSE</button>
            </div>
        </div>
    </div>
</div>

<!--End Modal Area-->

